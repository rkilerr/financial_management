<div style="text-align: center">
<%= form_with(model: category) do |form|%>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Назва категорії", style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label "Короткий опис", style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.submit class: "btn btn-success", style: "margin-top: 30px"%>
  </div>
  <div style="padding-top: 10px;">
    <%= submit_tag("Очистити", { :name => 'reset', :id => 'reset_button', :type => "reset", class: "btn btn-danger" }) %>
  </div>
<% end %>
</div>
